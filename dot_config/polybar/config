enable-ipc = true

[module/separator]
type = custom/text
format = <label>
format-foreground = ${colors.disabled}
format-padding = 1
label = |

[module/xworkspaces]
type = internal/xworkspaces

; Workspace labels
label-active = %name%
label-occupied = %name%
label-urgent = %name%
label-empty = %name%

; Active workspace
label-active-background = ${colors.background-alt}
label-active-underline = ${colors.primary}
label-active-padding-left = 1
label-active-padding-right = 1

; Occupied workspace
label-occupied-padding-left = 1
label-occupied-padding-right = 1

; Urgent workspace
label-urgent-background = ${colors.alert}
label-urgent-padding-left = 1
label-urgent-padding-right = 1

; Empty workspace
label-empty-foreground = ${colors.disabled}
label-empty-padding-left = 1
label-empty-padding-right = 1

; Overall module settings
format = <label-state>
format-padding = 0

[module/rofi-launcher]
type = custom/script
exec = echo ""
click-left = rofi -show drun
format-padding = 1

[module/rofi-windows]
type = custom/script
exec = echo ""
click-left = rofi -show window
format-padding = 1

[module/dock]
type = custom/script
exec = sh -c '~/.config/polybar/scripts/dock.sh 2>/dev/null'
interval = 0
format-padding = 1

[module/window]
type = custom/script
exec = ~/.config/polybar/window_title.sh
interval = 0.5

[module/playerctl]
type = custom/script
exec = ~/.config/polybar/scripts/player-icon.sh
interval = 1
format = <label>
format-foreground = ${colors.primary}
click-left = playerctl play-pause
format-padding = 1

[module/playerctl-prev]
type = custom/text
format = ""
format-foreground = ${colors.primary}
click-left = playerctl previous
format-padding = 1

[module/playerctl-next]
type = custom/text
format = ""
format-foreground = ${colors.primary}
click-left = playerctl next
format-padding = 1

[module/playerctl-title]
type = custom/script
exec = ~/.config/polybar/scripts/player-title.sh
interval = 1
format = <label>
format-foreground = ${colors.primary}
format-padding = 1

[module/updates-pacman-aurhelper]
type = custom/script
exec =~/.config/polybar/scripts/updates-pacman-aurhelper.sh
interval = 600

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = "  0%"
label-muted-foreground = ${colors.disabled}
format-volume-padding = 1
format-muted-padding = 1

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-3 = ""

; ramp-volume-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 1
date = %I:%M %p
date-alt = %m.%d.%Y %I:%M:%S %p
label = %date%
format-padding = 1

[module/network]
type = internal/network
interface-type = wireless
interface = wlp0s29u1u5
interval = 3.0

format-connected = %{A1:nm-connection-editor &:}<ramp-signal> <label-connected>%{A}
format-disconnected = %{A1:nm-connection-editor &:}<label-disconnected>%{A}
format-packetloss = %{A1:nm-connection-editor &:}<animation-packetloss> <label-connected>%{A}
format-connected-padding = 1
format-disconnected-padding = 1
format-packetloss-padding = 1

label-connected = %essid%

label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}

ramp-signal-0 = ""
ramp-signal-1 = ""
ramp-signal-2 = ""
ramp-signal-3 = ""
ramp-signal-4 = ""
ramp-signal-5 = ""

animation-packetloss-0 = ""
animation-packetloss-1 = ""
animation-packetloss-framerate = 500

; Optional: Add colors for different states
format-connected-foreground = ${colors.primary}
format-disconnected-foreground = ${colors.alert}
format-packetloss-foreground = ${colors.warn}

[module/tray]
type = internal/tray
format-padding = 1
tray-spacing = 10px
tray-foreground = ${colors.primary}

[module/session]
type = custom/script
exec = echo "⏻"
click-left = ~/.config/rofi/powermenu.sh
format-padding = 1

[settings]
screenchange-reload = true
pseudo-transparency = true
